# File managed by puppet
protocol pop3 {
  # Login executable location.
  <% if has_variable?('dovecot_pop3_login_executable') -%>
  login_executable = <%= dovecot_pop3_login_executable %>
  <% end -%>

  <% if has_variable?('dovecot_pop3_mail_max_userip_connections') -%>
  mail_max_userip_connections = <%= dovecot_pop3_mail_max_userip_connections %>
  <% end -%>

  <% if has_variable?('dovecot_pop3_mail_executable') -%>
  mail_executable = <%= dovecot_pop3_mail_executable %>
  <% end -%>
  pop3_uidl_format = %08Xu%08Xv

  <% if has_variable?('dovecot_pop3_plugins') -%>
  mail_plugins = <%= dovecot_pop3_plugins %>
  <% end -%>
}

